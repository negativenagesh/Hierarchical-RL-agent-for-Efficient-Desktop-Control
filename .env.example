# Environment Configuration
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=["*"]

# Model Configuration
MODEL_CHECKPOINT_PATH=checkpoints/final_model.pt
DEVICE=cuda

# OpenAI API (for powerful text encoding)
OPENAI_API_KEY=your-api-key-here

# Screen Configuration
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080
CAPTURE_WIDTH=640
CAPTURE_HEIGHT=480

# Training Configuration
TRAINING_ENABLED=true
DEFAULT_LEARNING_RATE=0.0003
DEFAULT_ROLLOUT_STEPS=2048
VISUALIZE_TRAINING=true  # Show GUI during training

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# OSWorld Configuration
# OSWorld is cloned from GitHub, not pulled as Docker image
OSWORLD_REPO_PATH=~/.osworld  # Where to clone OSWorld repository
OSWORLD_PROVIDER=docker  # VM provider: docker, vmware, virtualbox, aws
OSWORLD_OS_TYPE=Ubuntu  # OS type: Ubuntu or Windows
OSWORLD_BASE_PORT=5900  # VNC port for visualization
